<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ProFit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/shared.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/media_style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/login_and_registration.css" asp-append-version="true"/>
</head>
<body>
@await Html.PartialAsync("_LoginRegistrationPartial")
@await Html.PartialAsync("_ConfirmEmailPartial")
<div id="header-top">
    <div class="logo">ProFit</div>
    <div class="button-header">
        @if (User.Identity.IsAuthenticated)
        {
            <button class="button" type="button" name="button" onclick="window.location.href='@Url.Action("Logout","Home")'">Выйти</button>
        }
        @if (!User.Identity.IsAuthenticated)
        {
            <button class="button" id="click-to-hide">Войти</button>
        }
    </div>
    <div id="hamburger" class="icon">&#9776</div>
</div>
<img class="img-header" src="~/images/first people on ProFit.png" alt="Фитнес-центр ProFit">
<div id="header-bottom">
    <div class="menu">
        <ul>
            <li><a asp-controller="Home" asp-action="SiteInformation">Главная</a></li>
            <li><a asp-controller="Home" asp-action="Contact">Контакты</a></li>
            <li><a asp-controller="Home" asp-action="Services">Услуги</a></li>
        </ul>
    </div>
</div>
<div id="side-menu" class="side-menu">
    <div>
        <ul>
            <li><a asp-controller="Home" asp-action="SiteInformation">Главная</a></li>
            <li><a asp-controller="Home" asp-action="Contact">Контакты</a></li>
            <li><a asp-controller="Home" asp-action="Services">Услуги</a></li>
        </ul>
    </div>
    
    <button class="button" id="side-menu-button-click-on-hide" type="button" name="button">Войти</button>
</div>

<div class="container">
    @RenderBody()
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/shared_script.js" asp-append-version="true"></script>
<script src="~/js/home_script.js" asp-append-version="true"></script>
<script src="~/js/login_and_registration_script.js" asp-append-version="true"></script>
</body>
<footer class="footer">
    <div class="footer-left">
        <div class="logo">ProFit</div>
        <p>
            Выбирай ProFit-получай профит!
        </p>
        <div class="footer-ProFit">
            &copy; 2024 - ProFit - Tiraspol
        </div>
    </div>
    
    <div class="footer-right">
        <div class="menu">
            <ul>
                <li><a asp-controller="Home" asp-action="SiteInformation">Главная</a></li>
                <li><a asp-controller="Home" asp-action="Contact">Контакты</a></li>
                <li><a asp-controller="Home" asp-action="Services">Услуги</a></li>
            </ul>
        </div>
    </div>
</footer>
</html>