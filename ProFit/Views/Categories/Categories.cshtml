@using Type = ProFit.Domain.Enum.Type
@model List<ProFit.Domain.ViewModels.CategoriesViewModel> 
@{
    Layout = "_Layout";
    ViewData["Title"] = "Каталог";
}
<div class="container-categories">
    <div class="grid-container">
        @if (Model.Count !=0)
        {
            @foreach (var item in Model)
            {
                <div class="card-category" onclick="window.location.href='@Url.Action("Services","Product",new {Type=item.Type})'">
                    <img src="@item.PathIMG" alt="@item.Name" class="card-image"/>
                    <div class="card-overlay">
                        <div class="card-title">@item.Name</div>
                    </div>
                </div>
            }
        }
    </div>
</div>